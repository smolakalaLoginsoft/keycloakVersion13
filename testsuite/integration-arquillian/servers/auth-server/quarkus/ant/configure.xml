<project>

    <target name="config">
        <bin-chmod/>
        <echo>Re-augmenting...</echo>
        <exec osfamily="unix" dir="${auth.server.home}/bin" executable="./kc.sh" failonerror="true">
            <arg value="config"/>
            <arg value="-Dquarkus.http.root-path=/auth"/>
        </exec>
    </target>

    <macrodef name="bin-chmod">
        <sequential>
            <chmod perm="ug+x">
                <fileset dir="${auth.server.home}/bin">
                    <include name="*.sh"/>
                </fileset>
            </chmod>
        </sequential>
    </macrodef>

</project>
